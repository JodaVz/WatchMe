<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/output_movie_menu_by_category_movie_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:foregroundGravity="center"
        android:padding="5dp"
        android:src="@drawable/movie_details_front" />

    <TextView
        android:id="@+id/output_movie_menu_by_category_movie_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="5dp"
        android:text="Most popular"
        android:textSize="10dp"
        android:textColor="@color/textColorPrimary"/>

    <TextView
        android:id="@+id/output_movie_menu_by_category_movie_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="5dp"
        android:text="Most popular"
        android:visibility="gone"/>


</LinearLayout>